<Window x:Class="ClipboardAccelerator.Debug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardAccelerator"
        mc:Ignorable="d"
        Title="Application log" Height="439" Width="920" ShowInTaskbar="False" Closing="Window_Closing" >
    <Grid>
        <TextBox x:Name="tBDebug" Margin="10,10,10,35" TextWrapping="NoWrap" FontSize="14.667" HorizontalScrollBarVisibility="Auto" Initialized="tBDebug_Initialized" AllowDrop="False" IsReadOnly="True"/>
        <Button x:Name="bRefresh" Content="Refresh" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="bRefresh_Click"/>

    </Grid>
</Window>
