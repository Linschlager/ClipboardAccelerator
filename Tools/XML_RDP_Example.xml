%%oa** = string from the optional arguments box
-->

    <program id="1">
        <class>RDP_Example</class>
        <description>No description</description> 
	<issafe>true</issafe>
        <executable>mstsc.exe</executable>
        <path>C:\windows\system32</path>
	<staticarg>/v:%%ca**</staticarg>
    </program>

</ExternalProgram>